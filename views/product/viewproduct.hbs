
{{#each product}}
<div class="row">
    {{#each this}}
  <div class="col-md-3">
    <div class="item-container">
    <img class="item-image" src="/static/image/{{this.productimage}}">
    <div class="item-details">
      <div class="item-name"> {{this.productname}}</div>
      <div class="item-price"> Rs.{{this.productprice}}</div>
      <div class="item-description"> {{this.productdescription}}</div>
      <a class="add-to-cart-btn" href="/cart/{{this.id}}" >Add to Cart</a>
    </div>
  </div>
  </div>
  {{/each}}
</div>
{{/each}}

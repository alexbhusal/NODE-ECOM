<table class="table">
    <thead>
        <tr>
            <th scope="col">SN</th>
            <th scope="col">Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Description</th>
            <th scope="col">Category</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
    {{#each data}}
    <tr>

      <td>{{inc @index}}</td>
      <td><img src="/static/image/{{productimage}}" width="50px" height="50px"></td>
      <td>{{productname}}</td>
      <td>{{productprice}}</td>
      <td>{{productdescription}}</td>
      <td>{{categoryname}}</td>
      <td>
        <a href="/admin/product/delete/{{id}}">Delete</a/>&emsp;&emsp;
        <a href="/admin/product/edit/{{id}}">Edit</a></td>
    </tr>
   {{/each}}
  </tbody>
</table>
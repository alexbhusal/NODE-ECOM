{{#if error}}
{{#each error}}
 {{#if productname}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
       {{productname.msg}}
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
  {{/if}}

  {{#if productprice}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
       {{productprice.msg}}
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
  {{/if}}
  {{#if productdescription}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
       {{productdescription.msg}}
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
    {{/if}}
  
  {{#if category}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
       {{category.msg}}
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
  {{/if}}

  {{#if productimage}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
       {{productimage.msg}}
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
  {{/if}}
  {{/each}}
  {{/if}}


<form action="/admin/product" method="post" enctype="multipart/form-data">
  <fieldset>
   <div class="mb-3">
      <label for="productname" class="form-label">Product Name</label>
      <input type="text" id="productname" name="productname" class="form-control" placeholder="enter product name">
   </div>

   <div class="mb-3">
      <label for="productprice" class="form-label">Product Price</label>
      <input type="text" id="productprice" name="productprice" class="form-control" placeholder="enter product price">
   </div>
    
   <div class="mb-3">
     <select class="form-select" aria-label="Default select example" name="category">
      <option>Select category</option>
       {{#each category}}
       <option value={{this.id}}>{{this.categoryname}}</option>
       {{/each}}
    </select>
   </div>

   <div class="mb-3">
      <label for="productdescription" class="form-label">Product Description</label>
      <textarea type="text" id="productdescription" name="productdescription" class="form-control"></textarea>
   </div>

   <div class="mb-3">
      <label for="productimage" class="form-label">Product Image</label>
      <input type="file" id="productimage" name="productimage" class="form-control" accept="">
   </div>


   <button type="submit" class="btn btn-primary">Submit</button>
 </fieldset>
</form>